<h1 class="text-center text-2xl font-bold mb-4">{{title}}</h1>
<form id="noteForm" action="/submit" method="post" class="mb-6">
    <div class="flex items-center border-b border-gray-300 py-2">
        <input
            type="text"
            name="content"
            id="noteInput"
            required
            class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
            placeholder="Type your note and press Enter"
            autocomplete="off"
        />
    </div>
</form>
<ul class="space-y-2">
    {{#each notes}}
    <li class="bg-gray-50 rounded p-3 shadow">{{this.content}}</li>
    {{/each}}
</ul>

<script>
    const noteInput = document.getElementById("noteInput");

    window.onload = function () {
        noteInput.focus();
    };

    document.addEventListener("click", function (e) {
        if (e.target !== noteInput) {
            e.preventDefault();
            noteInput.focus();
        }
    });

    noteInput.addEventListener("keypress", function (e) {
        if (e.key === "Enter") {
            e.preventDefault();
            document.getElementById("noteForm").submit();
        }
    });
</script>
